<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="200dp"
        android:layout_height="150dp">

        <TextView
            android:textColor="@color/blake"
            android:textSize="16sp"
            android:text="温馨提示"
            android:id="@+id/rrr"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="#555555"
            android:textSize="12sp"
            android:id="@+id/hhh"
            android:text="你确定要退出当前账户吗?"
            android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/rrr"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            app:layout_constraintTop_toBottomOf="@+id/hhh"
            android:background="#aaaaaa"
            android:id="@+id/ghhh"
            android:layout_marginTop="22dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    <Button
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ghhh"
        android:background="@color/white"
        android:text="确定"
        android:paddingTop="4dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/queding"
        android:textSize="14sp"
        android:textColor="#2E5CFD"
        android:layout_width="100dp"
        android:layout_height="0dp"/>

        <View
            app:layout_constraintTop_toBottomOf="@+id/ghhh"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/queding"
            android:background="#aaaaaa"
            android:id="@+id/jjjkk"
            android:layout_width="1dp"
            android:layout_height="0dp"/>

        <Button
            app:layout_constraintLeft_toRightOf="@+id/jjjkk"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ghhh"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="8dp"
            android:background="@color/white"
            android:paddingTop="4dp"
            android:text="取消"
            app:layout_constraintHorizontal_weight="1"
            android:id="@+id/quxiao"
            android:textSize="14sp"
            android:textColor="#2E5CFD"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>