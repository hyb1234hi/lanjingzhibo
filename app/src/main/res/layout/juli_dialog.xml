<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/yuanjiao_top"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="显示距离,可以获得更多人气"
        android:textColor="#181818"
        android:textSize="17sp"
        android:id="@+id/rrr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="34dp"
        android:layout_marginBottom="26dp"
        android:layout_below="@+id/rrr"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:background="@drawable/xianshibg"
            android:layout_width="162dp"
            android:text="显示"
            android:id="@+id/xianshi"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:paddingTop="18dp"
            android:gravity="center_horizontal"
            android:layout_marginRight="6dp"
            android:layout_height="59dp"/>

        <Button
            android:text="隐藏"
            android:textColor="#AAB5CA"
            android:textSize="16sp"
            android:id="@+id/yingcang"
            android:gravity="center_horizontal"
            android:paddingTop="18dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/yingcangbg2"
            android:layout_width="162dp"
            android:layout_height="59dp"/>

    </LinearLayout>


</RelativeLayout>