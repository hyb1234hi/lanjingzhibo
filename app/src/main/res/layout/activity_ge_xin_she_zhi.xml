<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".ui.GeXinSheZhiActivity">

    <ImageView
        android:id="@+id/fanhui"
        android:layout_marginTop="13dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/fanhui_hei"
        android:layout_width="15dp"
        android:layout_height="20dp"/>


    <TextView
        app:layout_constraintTop_toTopOf="@+id/fanhui"
        app:layout_constraintBottom_toBottomOf="@+id/fanhui"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="18sp"
        android:textColor="#333333"
        android:text="设置"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/ggg"
        app:layout_constraintTop_toBottomOf="@+id/fanhui"
        android:layout_marginTop="13dp"
        android:background="#E5E5E5"
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <LinearLayout
        android:id="@+id/dddee"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ggg"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <TextView
                android:layout_centerVertical="true"
                android:text="账号安全"
                android:layout_marginLeft="16dp"
                android:textSize="15sp"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_marginRight="18dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/you"
                android:layout_width="8dp"
                android:layout_height="12dp"/>

            <View
                android:layout_alignParentBottom="true"
                android:background="#F5F5F5"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <TextView
                android:layout_centerVertical="true"
                android:text="消息通知"
                android:layout_marginLeft="16dp"
                android:textSize="15sp"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_marginRight="18dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/you"
                android:layout_width="8dp"
                android:layout_height="12dp"/>

            <View
                android:layout_alignParentBottom="true"
                android:background="#F5F5F5"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl3"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <TextView
                android:layout_centerVertical="true"
                android:text="直播间设置"
                android:layout_marginLeft="16dp"
                android:textSize="15sp"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_marginRight="18dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/you"
                android:layout_width="8dp"
                android:layout_height="12dp"/>

            <View
                android:layout_alignParentBottom="true"
                android:background="#F5F5F5"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl4"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <TextView
                android:layout_centerVertical="true"
                android:text="帮助"
                android:layout_marginLeft="16dp"
                android:textSize="15sp"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_marginRight="18dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/you"
                android:layout_width="8dp"
                android:layout_height="12dp"/>

            <View
                android:layout_alignParentBottom="true"
                android:background="#F5F5F5"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl5"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <TextView
                android:layout_centerVertical="true"
                android:text="关于我们"
                android:layout_marginLeft="16dp"
                android:textSize="15sp"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_marginRight="18dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/you"
                android:layout_width="8dp"
                android:layout_height="12dp"/>

            <View
                android:layout_alignParentBottom="true"
                android:background="#F5F5F5"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        </RelativeLayout>


        <View
            android:id="@+id/ggg33"
            android:background="#E5E5E5"
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/tuichu"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="47dp">

            <TextView
                android:textSize="17sp"
                android:textColor="#FF527B"
                android:text="退出当前账号"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:background="#F5F5F5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>