<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F5F5F5"
    android:layout_height="match_parent"
    tools:context=".ui.WoDeZhiBoActivity">

    <ImageView
        android:id="@+id/fanhui"
        android:layout_marginTop="15dp"
        android:layout_marginStart="16dp"
        android:padding="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/fanhui_hei"
        android:layout_width="12dp"
        android:layout_height="20dp"/>


    <TextView
        app:layout_constraintTop_toTopOf="@+id/fanhui"
        app:layout_constraintBottom_toBottomOf="@+id/fanhui"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="18sp"
        android:textColor="#333333"
        android:text="我的直播"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/ggg"
        app:layout_constraintTop_toBottomOf="@+id/fanhui"
        android:layout_marginTop="15dp"
        android:background="#E5E5E5"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <View
        android:id="@+id/top"
        android:background="@drawable/wodezhibobg"
        app:layout_constraintTop_toBottomOf="@+id/ggg"
        android:layout_width="match_parent"
        android:layout_height="188dp"/>

    <View
        android:id="@+id/top2"
        android:background="#33FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/ggg"
        android:layout_width="match_parent"
        android:layout_height="80dp"/>

    <ImageView
        app:layout_constraintTop_toTopOf="@+id/top"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="17dp"
        android:id="@+id/touxiang"
        android:layout_width="47dp"
        android:layout_height="47dp"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="@+id/top"
        app:layout_constraintLeft_toRightOf="@+id/touxiang"
        android:id="@+id/name"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        app:layout_constraintTop_toTopOf="@+id/name"
        app:layout_constraintLeft_toRightOf="@+id/name"
        android:layout_marginStart="5dp"
        android:id="@+id/djv"
        app:layout_constraintBottom_toBottomOf="@+id/name"
        android:background="@drawable/jianbiandengji8"
        android:layout_width="46dp"
        android:layout_height="16dp"/>

    <ImageView
        app:layout_constraintLeft_toLeftOf="@+id/djv"
        app:layout_constraintTop_toTopOf="@+id/djv"
        android:layout_marginStart="3dp"
        android:id="@+id/nmmm"
        app:layout_constraintBottom_toBottomOf="@+id/djv"
        android:background="@drawable/xingxing"
        android:layout_width="12dp"
        android:layout_height="12dp"/>

    <TextView
        app:layout_constraintLeft_toRightOf="@+id/nmmm"
        app:layout_constraintTop_toTopOf="@+id/djv"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/djv"
        app:layout_constraintRight_toRightOf="@+id/djv"
        android:id="@+id/dengji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

        <View
            app:layout_constraintTop_toTopOf="@+id/top"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/you_bai"
            android:layout_width="8dp"
            android:layout_height="13dp"/>

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/top2"
        android:layout_marginTop="20dp"
        android:text="今日直播收入(元)"
        android:id="@+id/ddd"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/ddd"
        android:layout_marginTop="6dp"
        android:text="0"
        android:id="@+id/shouru"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <RelativeLayout
        android:id="@+id/rl1"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/top"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="52dp">

        <View
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true"
            android:background="@drawable/shipingbg"
            android:layout_width="22dp"
            android:id="@+id/fffg"
            android:layout_height="22dp"/>

        <TextView
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/fffg"
            android:layout_marginStart="10dp"
            android:textSize="17sp"
            android:text="直播时长"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:layout_marginEnd="16dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/you"
            android:layout_width="8dp"
            android:layout_height="13dp"/>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>