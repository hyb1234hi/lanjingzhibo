<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/consts"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/paihang"
            android:layout_marginStart="20dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            app:layout_constraintLeft_toRightOf="@+id/paihang"
            android:layout_marginStart="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/touxiang"
            android:scaleType="fitXY"
            android:layout_width="26dp"
            android:layout_height="26dp"/>

        <TextView
            app:layout_constraintLeft_toRightOf="@+id/touxiang"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/name"
            android:layout_marginStart="4dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

          <ImageView
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              android:layout_marginStart="4dp"
              app:layout_constraintLeft_toRightOf="@+id/name"
              android:id="@+id/xingbie"
              android:layout_width="15dp"
              android:layout_height="15dp"/>

        <View
            app:layout_constraintLeft_toRightOf="@+id/xingbie"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/jianbiandengji8"
            android:id="@+id/dengjiview"
            android:layout_width="46dp"
            android:layout_height="16dp"/>

        <View
            app:layout_constraintLeft_toLeftOf="@+id/dengjiview"
            app:layout_constraintTop_toTopOf="@+id/dengjiview"
            android:layout_marginStart="3dp"
            app:layout_constraintBottom_toBottomOf="@+id/dengjiview"
            android:background="@drawable/xingxing"
            android:id="@+id/gggg"
            android:layout_width="12dp"
            android:layout_height="12dp"/>

        <TextView
            app:layout_constraintLeft_toRightOf="@+id/gggg"
            app:layout_constraintRight_toRightOf="@+id/dengjiview"
            app:layout_constraintTop_toTopOf="@+id/dengjiview"
            app:layout_constraintBottom_toBottomOf="@+id/dengjiview"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:id="@+id/dengji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="horizontal"
            app:layout_constraintLeft_toRightOf="@+id/dengjiview"
            android:id="@+id/fgg"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/guanliyuan"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:text="管理员"
                android:visibility="gone"
                android:layout_marginStart="8dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:background="@drawable/jianbiandengji4"
                android:layout_width="38dp"
                android:layout_height="16dp"/>

            <Button
                android:id="@+id/jingyan"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:text="禁言"
                android:visibility="gone"
                android:layout_marginStart="8dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:background="@drawable/jianbiandengji4"
                android:layout_width="38dp"
                android:layout_height="16dp"/>

        </LinearLayout>


        <TextView
            android:id="@+id/jingbi"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_marginEnd="14dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>