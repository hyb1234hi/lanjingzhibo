<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="280dp"
        android:id="@+id/ggg"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_height="222dp">

        <ImageView
            android:textColor="@color/blake"
            android:id="@+id/touxiang"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="@+id/ggg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

        <TextView
            android:textColor="#555555"
            android:textSize="15sp"
            android:id="@+id/name"
            android:text="姓名:"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/touxiang"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>

        <ImageView
            app:layout_constraintTop_toBottomOf="@+id/name"
            app:layout_constraintLeft_toLeftOf="@+id/touxiang"
            android:background="@drawable/nv"
            android:id="@+id/xingbie"
            android:layout_marginTop="6dp"
            android:layout_width="15dp"
            android:layout_height="15dp"/>

        <View
            app:layout_constraintLeft_toRightOf="@+id/xingbie"
            app:layout_constraintTop_toTopOf="@id/xingbie"
            android:layout_marginStart="6dp"
            android:id="@+id/bbbb"
            app:layout_constraintBottom_toBottomOf="@+id/xingbie"
            android:background="@drawable/jianbiandengji8"
            android:layout_width="46dp"
            android:layout_height="15dp"/>

        <ImageView
           app:layout_constraintLeft_toLeftOf="@+id/bbbb"
            app:layout_constraintTop_toTopOf="@+id/bbbb"
            android:layout_marginStart="3dp"
            android:id="@+id/ren"
            app:layout_constraintBottom_toBottomOf="@+id/bbbb"
            android:background="@drawable/xiaoren"
            android:layout_width="12dp"
            android:layout_height="12dp"/>
        <TextView
            android:textSize="10sp"
            android:textColor="@color/white"
            android:id="@+id/dengji"
            app:layout_constraintLeft_toRightOf="@+id/ren"
            app:layout_constraintTop_toTopOf="@+id/bbbb"
            app:layout_constraintRight_toRightOf="@+id/bbbb"
            app:layout_constraintBottom_toBottomOf="@+id/bbbb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    <Button
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/dialog_bg_all"
        android:text="拒绝"
        android:id="@+id/jujue"
        android:textSize="18sp"
        android:textColor="#181818"
        android:layout_width="140dp"
        android:layout_height="50dp"/>

        <View
            app:layout_constraintTop_toBottomOf="@+id/ghhh"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/jujue"
            android:background="#aaaaaa"
            android:id="@+id/jjjkk"
            android:layout_width="1dp"
            android:layout_height="50dp"/>

        <Button
            app:layout_constraintLeft_toRightOf="@+id/jjjkk"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/dialog_bg_all"
            android:text="同意"
            android:id="@+id/tongyi"
            android:textSize="18sp"
            android:textColor="#F36D87"
            android:layout_width="0dp"
            android:layout_height="50dp"/>

        <View
            app:layout_constraintBottom_toTopOf="@+id/jujue"
            android:background="#aaaaaa"
            android:id="@+id/ghhh"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="#666666"
            android:textSize="14sp"
            android:id="@+id/title"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toTopOf="@+id/ghhh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>