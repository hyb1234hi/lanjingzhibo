<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/consts"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/bgbg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:textSize="13sp"
            android:textColor="#ee333333"
            android:id="@+id/title"
            android:maxLines="1"
            android:maxLength="8"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="6dp"
            app:layout_constraintBottom_toBottomOf="@+id/consts"
            app:layout_constraintLeft_toLeftOf="@+id/consts"
            android:ellipsize="end"
            android:layout_width="109dp"
            android:layout_height="19dp"/>

            <ImageView
                app:layout_constraintTop_toTopOf="@+id/title"
                app:layout_constraintBottom_toBottomOf="@+id/title"
                android:id="@+id/imddd"
                app:layout_constraintLeft_toRightOf="@+id/title"
                android:background="@drawable/rectangle"
                android:layout_width="34dp"
                android:layout_height="15dp"/>

            <TextView
                app:layout_constraintTop_toTopOf="@+id/imddd"
                app:layout_constraintBottom_toBottomOf="@+id/imddd"
                app:layout_constraintRight_toRightOf="@+id/imddd"
                app:layout_constraintLeft_toLeftOf="@+id/imddd"
                android:id="@+id/dengji"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>