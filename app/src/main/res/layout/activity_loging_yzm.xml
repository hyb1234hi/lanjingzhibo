<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent"
    tools:context=".ui.LogingActivity">


    <ImageView
        android:id="@+id/fanhui"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/fanhuiim"
        android:layout_width="28dp"
        android:layout_height="28dp"/>

        <TextView
            android:layout_marginTop="88dp"
            android:textColor="#333333"
            android:text="输入6位验证码"
            android:textSize="24sp"
            android:id="@+id/rrr"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
        android:layout_below="@+id/rrr"
        android:text="已发送到"
        android:id="@+id/yifasong"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:textColor="#444444"
        android:textSize="17sp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


   <RelativeLayout
       android:id="@+id/ffff"
       android:layout_marginLeft="30dp"
       android:layout_marginRight="35dp"
       android:layout_marginTop="158dp"
       android:gravity="center_vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <com.example.myapplication2.views.PhoneCode
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/pc_1"
           android:layout_marginTop="40dp"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="20dp"/>


   </RelativeLayout>


    <Button
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:layout_marginTop="30dp"
        android:layout_below="@id/ffff"
        android:id="@+id/yanzhengma"
        android:background="@drawable/jiaohu3"
        android:layout_centerHorizontal="true"
        android:layout_width="315dp"
        android:layout_height="47dp"/>




</RelativeLayout>