<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context="com.shengma.lanjing.ui.fargments.Fragment4">


    <com.shengma.lanjing.views.MyTopView
        android:id="@+id/mytopview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

<androidx.cardview.widget.CardView
    android:background="@drawable/yuanxian_bai"
    android:layout_marginTop="105dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    android:id="@+id/coder"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_width="341dp"
    android:layout_height="221dp"/>

    <ImageView
        android:elevation="11dp"
        app:layout_constraintTop_toTopOf="@+id/coder"
        app:layout_constraintBottom_toTopOf="@+id/coder"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/touxiang"
        android:layout_width="94dp"
        android:layout_height="94dp"/>


    <TextView
        android:elevation="11dp"
        android:textSize="24sp"
        android:textColor="#333333"
        android:layout_width="wrap_content"
        android:layout_height="24dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>