<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextureView
        android:id="@+id/surface"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    
    
    <View
        android:id="@+id/fanzhuang"
        android:background="@drawable/fanzhuangzbbg"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="28dp"
        android:layout_height="28dp"/>

    <View
        android:id="@+id/guanbi"
        android:background="@drawable/guanbi"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="28dp"
        android:layout_height="28dp"/>


    <RelativeLayout
        android:layout_marginBottom="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="5dp">

        <Chronometer
            android:layout_centerHorizontal="true"
            android:id="@+id/record_time"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:format="%s" />

        <!-- 开始/结束 录制按钮 -->
        <ImageView
            android:layout_below="@+id/record_time"
            android:id="@+id/record_control"
            android:layout_width="60dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_height="60dp"
            android:tint="@color/image_color_red"
            android:onClick="control"
            android:src="@drawable/ic_album" />

        <ImageView
            android:id="@+id/xiangce"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:background="@drawable/xiangce33" />


    </RelativeLayout>

</RelativeLayout>