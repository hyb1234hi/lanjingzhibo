<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.wuguanjingyao.TongZhiActivity">



    <ImageView
        android:id="@+id/fanhui"
        android:layout_marginTop="16dp"
        android:padding="2dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/fanhui_hei"
        android:layout_width="15dp"
        android:layout_height="20dp"/>


    <TextView
        app:layout_constraintTop_toTopOf="@+id/fanhui"
        app:layout_constraintBottom_toBottomOf="@+id/fanhui"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="18sp"
        android:textColor="#333333"
        android:text="通知设置"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/ggg"
        app:layout_constraintTop_toBottomOf="@+id/fanhui"
        android:layout_marginTop="16dp"
        android:background="#E5E5E5"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <TextView
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toTopOf="@+id/ggg"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:id="@+id/gg"
        android:textColor="#181818"
        android:textSize="16sp"
        android:text="免打扰模式"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.SwitchCompat
        android:layout_width="51dp"
        android:id="@+id/swich1"
        app:layout_constraintTop_toTopOf="@+id/gg"
        app:layout_constraintBottom_toBottomOf="@+id/gg"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_height="31dp"/>

        <TextView
            app:layout_constraintTop_toBottomOf="@+id/gg"
            android:layout_marginTop="18dp"
            android:background="#F5F5F5"
            android:paddingTop="10dp"
            android:id="@+id/ff"
            android:paddingLeft="16dp"
            android:text="开启后,不会推送app消息到你到手机"
            android:textSize="12sp"
            android:textColor="#AAAAAA"
            android:layout_width="match_parent"
            android:layout_height="56dp"/>

    <TextView
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/ff"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:id="@+id/gg22"
        android:textColor="#181818"
        android:textSize="16sp"
        android:text="震动"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.SwitchCompat
        android:layout_width="51dp"
        android:id="@+id/swich2"
        app:layout_constraintTop_toTopOf="@+id/gg22"
        app:layout_constraintBottom_toBottomOf="@+id/gg22"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_height="31dp"/>

    <View
        android:background="#F5F5F5"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/gg22"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>