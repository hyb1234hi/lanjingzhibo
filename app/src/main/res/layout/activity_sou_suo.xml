<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".ui.SouSuoActivity">



    <EditText
        android:paddingStart="40dp"
        android:textColor="#555555"
        android:textSize="14dp"
        android:layout_marginTop="30dp"
        android:hint="输入主播姓名或ID"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="12dp"
        android:id="@+id/sousuo"
        android:background="@drawable/yuanxian_huise15"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="298dp"
        android:layout_height="30dp"/>

    <ImageView
        android:tint="@color/white"
        app:layout_constraintTop_toTopOf="@+id/sousuo"
        app:layout_constraintBottom_toBottomOf="@+id/sousuo"
        app:layout_constraintLeft_toLeftOf="@+id/sousuo"
        android:src="@drawable/sousuobg2"
        android:padding="2dp"
        android:layout_marginStart="12dp"
        android:layout_width="20dp"
        android:layout_height="20dp"/>

    <TextView
        app:layout_constraintLeft_toRightOf="@+id/sousuo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sousuo"
        android:textSize="16sp"
        android:text="取消"
        android:id="@+id/quxiao"
        android:gravity="center"
        android:textColor="#333333"
        app:layout_constraintBottom_toBottomOf="@+id/sousuo"
        android:layout_width="wrap_content"
        android:layout_height="34dp"/>


        <View
            android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/sousuo"
            android:background="#B9B9B9"
            android:id="@+id/fff"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            app:layout_constraintTop_toBottomOf="@+id/fff"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>