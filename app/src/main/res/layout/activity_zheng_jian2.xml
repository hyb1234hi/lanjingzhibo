<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".ui.ZhengJian2Activity">


    <ImageView
        android:id="@+id/fanhui"
        android:layout_marginTop="15dp"
        android:layout_marginStart="16dp"
        android:padding="3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/fanhui_hei"
        android:layout_width="15dp"
        android:layout_height="20dp"/>


    <TextView
        app:layout_constraintTop_toTopOf="@+id/fanhui"
        app:layout_constraintBottom_toBottomOf="@+id/fanhui"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="18sp"
        android:textColor="#333333"
        android:text="证件信息"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/ggg"
        app:layout_constraintTop_toBottomOf="@+id/fanhui"
        android:layout_marginTop="15dp"
        android:background="#E5E5E5"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <TextView
        android:layout_marginTop="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="18dp"
        app:layout_constraintTop_toBottomOf="@+id/ggg"
        android:textColor="#181818"
        android:textSize="16sp"
        android:text="证件类型"
        android:id="@+id/jk12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        app:layout_constraintTop_toBottomOf="@+id/ggg"
        app:layout_constraintLeft_toRightOf="@+id/jk1"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="二代身份证"
        android:enabled="false"
        android:focusable="false"
        android:id="@+id/name2"
        android:layout_marginLeft="16dp"
        android:layout_width="0dp"
        android:layout_height="52dp"/>


    <TextView
        android:layout_marginTop="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="18dp"
        app:layout_constraintTop_toBottomOf="@+id/name2"
        android:textColor="#181818"
        android:textSize="16sp"
        android:text="真实姓名"
        android:id="@+id/jk1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        app:layout_constraintTop_toBottomOf="@+id/name2"
        app:layout_constraintLeft_toRightOf="@+id/jk1"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/name"
        android:enabled="false"
        android:focusable="false"
        android:layout_marginLeft="16dp"
        android:layout_width="0dp"
        android:layout_height="52dp"/>

    <TextView
        android:layout_marginTop="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="18dp"
        app:layout_constraintTop_toBottomOf="@+id/name"
        android:textColor="#181818"
        android:textSize="16sp"
        android:text="身份证号"
        android:id="@+id/jk2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/haoma"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintLeft_toRightOf="@+id/jk2"
        app:layout_constraintRight_toRightOf="parent"
        android:enabled="false"
        android:focusable="false"
        android:layout_marginLeft="16dp"
        android:layout_width="0dp"
        android:layout_height="52dp"/>

    <View
        android:background="#F5F5F5"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/haoma"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <TextView
        android:text="证件信息设置后不能修改，如有疑问请联系客服"
        android:textSize="12sp"
        android:layout_marginStart="16dp"
        android:textColor="#AAAAAA"
        android:layout_marginTop="22dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/haoma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>