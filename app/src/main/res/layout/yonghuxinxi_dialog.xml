<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="316dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="40dp"
        android:background="@drawable/yuanjiao_top"
        android:layout_width="match_parent"
        android:layout_height="276dp">

        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:padding="5dp"
            android:src="@drawable/fanhui_hei"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/guanbi"
            android:layout_width="32dp"
            android:layout_height="32dp"/>

        <TextView
            android:textColor="#333333"
            android:textSize="26sp"
            android:id="@+id/bianji"
            android:gravity="center"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@+id/guanbi"
            app:layout_constraintBottom_toBottomOf="@+id/guanbi"
            app:layout_constraintRight_toRightOf="parent"
            android:text="..."
            android:visibility="gone"
            android:padding="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            app:layout_constraintTop_toBottomOf="@+id/guanbi"
            android:layout_marginTop="15dp"
            android:id="@+id/name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="24sp"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <ImageView
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/name"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="130dp"
            android:id="@+id/xingbie"
            android:background="@drawable/nv"
            android:layout_width="15dp"
            android:layout_height="15dp"/>

        <ImageView
            app:layout_constraintLeft_toRightOf="@+id/xingbie"
            app:layout_constraintTop_toTopOf="@+id/xingbie"
            app:layout_constraintBottom_toBottomOf="@+id/xingbie"
            android:layout_marginStart="6dp"
            android:id="@+id/fffsfs"
            android:background="@drawable/yuanxian_hong"
            android:layout_width="48dp"
            android:layout_height="15dp"/>

        <ImageView
            app:layout_constraintLeft_toRightOf="@+id/xingbie"
            app:layout_constraintTop_toTopOf="@+id/xingbie"
            app:layout_constraintBottom_toBottomOf="@+id/xingbie"
            android:layout_marginStart="8dp"
            android:id="@+id/tyryrt"
            android:background="@drawable/xingxing"
            android:layout_width="12dp"
            android:layout_height="12dp"/>

        <TextView
            android:textSize="10sp"
            android:textColor="@color/white"
            app:layout_constraintLeft_toRightOf="@+id/tyryrt"
            app:layout_constraintTop_toTopOf="@+id/fffsfs"
            app:layout_constraintBottom_toBottomOf="@+id/fffsfs"
            app:layout_constraintRight_toRightOf="@+id/fffsfs"
            android:id="@+id/dengji"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <ImageView
            app:layout_constraintLeft_toRightOf="@+id/fffsfs"
            app:layout_constraintTop_toTopOf="@+id/fffsfs"
            app:layout_constraintBottom_toBottomOf="@+id/fffsfs"
            android:layout_marginStart="6dp"
            android:id="@+id/f22"
            android:background="@drawable/yuanxian_lv"
            android:layout_width="48dp"
            android:layout_height="15dp"/>

        <ImageView
            app:layout_constraintLeft_toRightOf="@+id/fffsfs"
            app:layout_constraintTop_toTopOf="@+id/fffsfs"
            app:layout_constraintBottom_toBottomOf="@+id/fffsfs"
            android:layout_marginStart="8dp"
            android:id="@+id/f33"
            android:background="@drawable/lvbg"
            android:layout_width="12dp"
            android:layout_height="12dp"/>

        <TextView
            android:textSize="10sp"
            android:textColor="@color/white"
            app:layout_constraintLeft_toRightOf="@+id/f33"
            app:layout_constraintTop_toTopOf="@+id/f22"
            app:layout_constraintBottom_toBottomOf="@+id/f22"
            app:layout_constraintRight_toRightOf="@+id/f22"
            android:id="@+id/dengji2"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <TextView
            app:layout_constraintTop_toBottomOf="@+id/fffsfs"
            android:layout_marginTop="10dp"
            android:id="@+id/myid"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="14sp"
            android:textColor="#999999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="16sp"
            android:text="非管理员"
            android:gravity="center"
            android:id="@+id/guanliyuan"
            android:layout_marginTop="8dp"
            android:layout_marginStart="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/myid"
            android:textColor="#333333"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swich1"
            app:layout_constraintTop_toTopOf="@+id/guanliyuan"
            app:layout_constraintBottom_toBottomOf="@+id/guanliyuan"
            app:layout_constraintLeft_toRightOf="@+id/guanliyuan"
            style="@style/TextAppearance.AppCompat.Widget.Switch"
            android:layout_width="58dp"
            android:layout_height="34dp"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swich2"
            app:layout_constraintTop_toTopOf="@+id/swich1"
            app:layout_constraintBottom_toBottomOf="@+id/swich1"
            android:layout_marginTop="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="20dp"
            style="@style/TextAppearance.AppCompat.Widget.Switch"
            android:layout_width="58dp"
            android:layout_height="34dp"/>

        <TextView
            app:layout_constraintRight_toLeftOf="@+id/swich2"
            app:layout_constraintTop_toTopOf="@+id/swich2"
            app:layout_constraintBottom_toBottomOf="@+id/swich2"
            android:textSize="16sp"
            android:text="未禁言"
            android:id="@+id/jingyan"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <View
            android:id="@+id/hhhh"
            app:layout_constraintTop_toBottomOf="@+id/jingyan"
            android:layout_marginTop="8dp"
            android:background="#F5F5F5"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/hhhh"
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/textView2"
            app:layout_constraintHorizontal_weight="1">
            <TextView
                android:textColor="#999999"
                android:textSize="12sp"
                android:text="粉丝"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/fensi"
                android:textColor="#333333"
                android:textSize="20sp"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>




        <LinearLayout
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/hhhh"
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="0dp"
            app:layout_constraintLeft_toRightOf="@+id/textView1"
            app:layout_constraintRight_toLeftOf="@+id/textView3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_weight="1" >

            <TextView
                android:textColor="#999999"
                android:textSize="12sp"
                android:text="关注"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="#333333"
                android:textSize="20sp"
                android:id="@+id/guanzhu"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/hhhh"
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="0dp"
            app:layout_constraintLeft_toRightOf="@+id/textView2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_weight="1" >

            <TextView
                android:textColor="#999999"
                android:textSize="12sp"
                android:text="贡献鲸币"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/xingguang"
                android:textColor="#333333"
                android:textSize="20sp"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:id="@+id/touxiang"
        android:layout_centerHorizontal="true"
        android:layout_width="80dp"
        android:layout_height="80dp"/>


</RelativeLayout>