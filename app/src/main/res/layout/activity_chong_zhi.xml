<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".ui.ChongZhiActivity">

    <ImageView
        android:id="@+id/fanhui"
        android:layout_marginTop="33dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/fanhui_hei"
        android:layout_width="15dp"
        android:layout_height="20dp"/>


    <TextView
        app:layout_constraintTop_toTopOf="@+id/fanhui"
        app:layout_constraintBottom_toBottomOf="@+id/fanhui"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="18sp"
        android:textColor="#333333"
        android:text="充值中心"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/ggg"
        app:layout_constraintTop_toBottomOf="@+id/fanhui"
        android:layout_marginTop="13dp"
        android:background="#E5E5E5"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <ImageView
        android:id="@+id/touxiang"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ggg"
        android:layout_marginTop="17dp"
        android:layout_marginStart="16dp"
        android:layout_width="47dp"
        android:layout_height="47dp"/>

    <TextView
        app:layout_constraintLeft_toRightOf="@+id/touxiang"
        app:layout_constraintTop_toTopOf="@+id/touxiang"
        android:layout_marginStart="12dp"
        android:layout_marginTop="3dp"
        android:textColor="#181818"
        android:textSize="16sp"
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        app:layout_constraintLeft_toRightOf="@+id/touxiang"
        app:layout_constraintBottom_toBottomOf="@+id/touxiang"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="3dp"
        android:textColor="#F36D87"
        android:textSize="14sp"
        android:id="@+id/yue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <View
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/touxiang"
        android:background="#F5F5F5"
        android:layout_width="match_parent"
        android:layout_height="6dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>