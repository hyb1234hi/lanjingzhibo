<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".ui.ChongZhiActivity">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/fanhui"
        android:layout_marginTop="15dp"
        android:layout_marginStart="16dp"
        android:padding="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/fanhui_hei"
        android:layout_width="15dp"
        android:layout_height="20dp"/>


    <TextView
        app:layout_constraintTop_toTopOf="@+id/fanhui"
        app:layout_constraintBottom_toBottomOf="@+id/fanhui"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="18sp"
        android:textColor="#333333"
        android:text="充值中心"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/ggg"
        app:layout_constraintTop_toBottomOf="@+id/fanhui"
        android:layout_marginTop="15dp"
        android:background="#E5E5E5"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <ImageView
        android:id="@+id/touxiang"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ggg"
        android:layout_marginTop="17dp"
        android:layout_marginStart="16dp"
        android:layout_width="47dp"
        android:layout_height="47dp"/>

    <TextView
        app:layout_constraintLeft_toRightOf="@+id/touxiang"
        app:layout_constraintTop_toTopOf="@+id/touxiang"
        android:layout_marginStart="12dp"
        android:layout_marginTop="3dp"
        android:textColor="#181818"
        android:textSize="16sp"
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        app:layout_constraintLeft_toRightOf="@+id/touxiang"
        app:layout_constraintBottom_toBottomOf="@+id/touxiang"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="3dp"
        android:textColor="#F36D87"
        android:textSize="14sp"
        android:id="@+id/yue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <View
        android:id="@+id/hhh"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/touxiang"
        android:background="#F5F5F5"
        android:layout_width="match_parent"
        android:layout_height="6dp"/>


    <LinearLayout
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/hhh"
        android:id="@+id/textView1"
        android:layout_width="0dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/yuanxian_yinying"
        android:layout_marginStart="16dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:layout_height="62dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/textView2"
        app:layout_constraintHorizontal_weight="1">
        <TextView
            android:textColor="#333333"
            android:textSize="15sp"
            android:text="58鲸币"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="#AAB5CA"
            android:textSize="15sp"
            android:text="¥58"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/im1"
            android:visibility="gone"
            android:src="@drawable/chongzhigou"
            android:layout_width="10dp"
            android:layout_marginStart="40dp"
            android:layout_height="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/hhh"
        android:id="@+id/textView2"
        android:layout_marginTop="20dp"
        android:layout_width="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/yuanxian_yinying"
        android:gravity="center"
        android:layout_height="62dp"
        app:layout_constraintLeft_toRightOf="@+id/textView1"
        app:layout_constraintRight_toLeftOf="@+id/textView3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_weight="1" >

        <TextView
            android:textColor="#333333"
            android:textSize="15sp"
            android:text="98鲸币"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="#AAB5CA"
            android:textSize="15sp"
            android:text="¥98"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/im2"
            android:visibility="gone"
            android:src="@drawable/chongzhigou"
            android:layout_width="10dp"
            android:layout_marginStart="40dp"
            android:layout_height="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/hhh"
        android:id="@+id/textView3"
        android:layout_marginTop="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginRight="16dp"
        android:layout_width="0dp"
        android:background="@drawable/yuanxian_yinying"
        android:gravity="center"
        android:layout_height="62dp"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_weight="1" >

        <TextView
            android:textColor="#333333"
            android:textSize="15sp"
            android:text="598鲸币"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="#AAB5CA"
            android:textSize="15sp"
            android:text="¥598"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/im3"
            android:visibility="gone"
            android:src="@drawable/chongzhigou"
            android:layout_width="10dp"
            android:layout_marginStart="40dp"
            android:layout_height="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/yuanxian_yinying"
        android:layout_marginStart="16dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:layout_height="62dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/textView5"
        app:layout_constraintHorizontal_weight="1">
        <TextView
            android:textColor="#333333"
            android:textSize="15sp"
            android:text="1998鲸币"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="#AAB5CA"
            android:textSize="15sp"
            android:text="¥1998"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/im4"
            android:visibility="gone"
            android:src="@drawable/chongzhigou"
            android:layout_width="10dp"
            android:layout_marginStart="40dp"
            android:layout_height="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:id="@+id/textView5"
        android:layout_marginTop="16dp"
        android:layout_width="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/yuanxian_yinying"
        android:gravity="center"
        android:layout_height="62dp"
        app:layout_constraintLeft_toRightOf="@+id/textView4"
        app:layout_constraintRight_toLeftOf="@+id/textView6"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_weight="1" >

        <TextView
            android:textColor="#333333"
            android:textSize="15sp"
            android:text="3998鲸币"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="#AAB5CA"
            android:textSize="15sp"
            android:text="¥3998"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/im5"
            android:visibility="gone"
            android:src="@drawable/chongzhigou"
            android:layout_width="10dp"
            android:layout_marginStart="40dp"
            android:layout_height="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:id="@+id/textView6"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginRight="16dp"
        android:layout_width="0dp"
        android:background="@drawable/yuanxian_yinying"
        android:gravity="center"
        android:layout_height="62dp"
        app:layout_constraintLeft_toRightOf="@+id/textView5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_weight="1" >

        <TextView
            android:textColor="#333333"
            android:textSize="15sp"
            android:text="5998鲸币"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="#AAB5CA"
            android:textSize="15sp"
            android:text="¥5998"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/im6"
            android:visibility="gone"
            android:src="@drawable/chongzhigou"
            android:layout_width="10dp"
            android:layout_marginStart="40dp"
            android:layout_height="10dp"/>

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/yuanxian_yinying"
        android:layout_marginStart="16dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:layout_height="62dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/textView8"
        app:layout_constraintHorizontal_weight="1">
        <TextView
            android:textColor="#333333"
            android:textSize="15sp"
            android:text="9998鲸币"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="#AAB5CA"
            android:textSize="15sp"
            android:text="¥9998"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/im7"
            android:visibility="gone"
            android:src="@drawable/chongzhigou"
            android:layout_width="10dp"
            android:layout_marginStart="40dp"
            android:layout_height="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        android:id="@+id/textView8"
        android:layout_marginTop="16dp"
        android:layout_width="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:layout_height="62dp"
        app:layout_constraintLeft_toRightOf="@+id/textView7"
        app:layout_constraintRight_toLeftOf="@+id/textView9"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_weight="1" >


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        android:id="@+id/textView9"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginRight="16dp"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="62dp"
        app:layout_constraintLeft_toRightOf="@+id/textView8"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_weight="1" >

    </LinearLayout>

    <EditText
        android:id="@+id/zhifuET"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10dp"
        android:paddingStart="96dp"
        android:textColor="#AAB5CA"
        android:textSize="16sp"
        android:inputType="number"
        android:background="@drawable/yuanxian_yinying"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="44dp"/>

        <TextView
            app:layout_constraintLeft_toLeftOf="@+id/zhifuET"
            app:layout_constraintTop_toTopOf="@+id/zhifuET"
            app:layout_constraintBottom_toBottomOf="@+id/zhifuET"
            android:textColor="#333333"
            android:textSize="15sp"
            android:text="其他金额:"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <RadioGroup
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/zhifuET"
        android:id="@+id/radioGroup_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RadioButton
            android:id="@+id/nan"
            android:layout_width="wrap_content"
            android:layout_marginStart="16dp"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="微信支付" />
        <RadioButton
            android:textColor="#333333"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="16dp"
            android:id="@+id/nv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="支付宝支付" />
    </RadioGroup>

    <TextView
        android:textColor="#AAB5CA"
        android:textSize="15sp"
        android:id="@+id/shifu"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/radioGroup_gender"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="实付:¥0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:background="@drawable/wanchengbg"
        android:layout_marginTop="14dp"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:text="支付"
        android:id="@+id/zhifu"
        app:layout_constraintTop_toBottomOf="@+id/shifu"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="327dp"
        android:layout_height="56dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>