<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/consts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

       <ImageView
           android:id="@+id/touxiang"
           android:layout_marginStart="16sp"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintLeft_toLeftOf="parent"
           android:layout_width="26dp"
           android:layout_height="26dp"/>

        <TextView
            android:id="@+id/name"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            app:layout_constraintLeft_toRightOf="@+id/touxiang"
            android:layout_marginStart="6dp"
            app:layout_constraintTop_toTopOf="@+id/touxiang"
            app:layout_constraintBottom_toBottomOf="@+id/touxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            app:layout_constraintLeft_toRightOf="@+id/name"
            android:layout_marginStart="6dp"
            android:background="@drawable/nv"
            app:layout_constraintTop_toTopOf="@+id/name"
            app:layout_constraintBottom_toBottomOf="@+id/name"
            android:id="@+id/xingbie"
            android:layout_width="15dp"
            android:layout_height="15dp"/>

        <View
            app:layout_constraintLeft_toRightOf="@+id/xingbie"
            android:layout_marginStart="6dp"
            android:background="@drawable/jianbiandengji8"
            app:layout_constraintTop_toTopOf="@+id/xingbie"
            app:layout_constraintBottom_toBottomOf="@+id/xingbie"
            android:id="@+id/dengjiview"
            android:layout_width="45dp"
            android:layout_height="15dp"/>

        <ImageView
            android:id="@+id/gkl"
            app:layout_constraintLeft_toLeftOf="@+id/dengjiview"
            android:layout_marginStart="3dp"
            android:background="@drawable/xingxing"
            app:layout_constraintTop_toTopOf="@+id/dengjiview"
            app:layout_constraintBottom_toBottomOf="@+id/dengjiview"
            android:layout_width="8dp"
            android:layout_height="8dp"/>

        <TextView
            app:layout_constraintLeft_toRightOf="@+id/gkl"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="@+id/dengjiview"
            android:textColor="@color/white"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:textSize="10sp"
            android:id="@+id/dengji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <Button
            android:background="@drawable/pkbgbg"
            app:layout_constraintTop_toTopOf="@+id/touxiang"
            app:layout_constraintBottom_toBottomOf="@+id/touxiang"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="10sp"
            android:text="PK"
            android:layout_marginRight="16dp"
            android:id="@+id/pk"
            android:textColor="#F4F2F2"
            android:layout_width="49dp"
            android:layout_height="24dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>