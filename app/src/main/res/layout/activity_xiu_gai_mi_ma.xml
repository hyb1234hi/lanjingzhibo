<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".ui.XiuGaiMiMaActivity">

    <ImageView
        android:id="@+id/fanhui"
        android:layout_marginTop="15dp"
        android:padding="3dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/fanhui_hei"
        android:layout_width="15dp"
        android:layout_height="20dp"/>


    <TextView
        app:layout_constraintTop_toTopOf="@+id/fanhui"
        app:layout_constraintBottom_toBottomOf="@+id/fanhui"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="18sp"
        android:textColor="#333333"
        android:text="修改密码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/ggg"
        app:layout_constraintTop_toBottomOf="@+id/fanhui"
        android:layout_marginTop="15dp"
        android:background="#E5E5E5"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <TextView
        app:layout_constraintTop_toBottomOf="@+id/ggg"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:textSize="12sp"
        android:id="@+id/ghh"
        android:textColor="#AAAAAA"
        android:text="新密码必须包含字母和数组长度6到16位"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


        <EditText
            android:hint="请输入新密码"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:paddingStart="10dp"
            android:id="@+id/mima1"
            android:inputType="textPassword"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/ghh"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:layout_height="48dp"/>

    <EditText
        android:hint="再次确认新密码"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:paddingStart="10dp"
        android:id="@+id/mima2"
        android:inputType="textPassword"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/mima1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="48dp"/>

    <Button
        android:id="@+id/wancheng"
        android:layout_marginTop="40dp"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:text="完成"
        android:background="@drawable/wanchengbg"
        app:layout_constraintTop_toBottomOf="@+id/mima2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="315dp"
        android:layout_height="44dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>