<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shengma.lanjing.ui.fargments.Fragment1">

    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="50dp"
            android:layout_height="44dp">

            <TextView
                android:layout_centerInParent="true"
                android:id="@+id/tv11"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="#666666"
                android:text="关注"
                android:layout_width="50dp"
                android:layout_height="28dp"/>

            <ImageView
                android:layout_below="@+id/tv11"
                android:id="@+id/im11"
                android:visibility="gone"
                android:layout_centerHorizontal="true"
                android:background="@drawable/yuanxian"
                android:layout_width="15dp"
                android:layout_height="4dp"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_toRightOf="@+id/rl1"
            android:id="@+id/rl2"
            android:layout_marginStart="10dp"
            android:layout_width="50dp"
            android:layout_height="44dp">

            <TextView
                android:id="@+id/tv22"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#111111"
                android:text="直播"
                android:layout_centerInParent="true"
                android:layout_width="50dp"
                android:layout_height="28dp"/>

            <ImageView
                android:id="@+id/im22"
                android:layout_below="@+id/tv22"
                android:layout_centerHorizontal="true"
                android:background="@drawable/yuanxian"
                android:layout_width="15dp"
                android:layout_height="4dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl3"
            android:layout_toRightOf="@+id/rl2"
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            android:layout_width="50dp"
            android:layout_height="44dp">

            <TextView
                android:id="@+id/tv33"
                android:textSize="13sp"
                android:textColor="#666666"
                android:text="视频"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_width="50dp"
                android:layout_height="28dp"/>

            <ImageView
                android:layout_below="@+id/tv33"
                android:layout_centerHorizontal="true"
                android:visibility="gone"
                android:id="@+id/im33"
                android:background="@drawable/yuanxian"
                android:layout_width="15dp"
                android:layout_height="4dp"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/sousuo"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="121dp"
            android:layout_height="42dp">
            <ImageView
                android:background="@drawable/souuo11"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <ImageView
                android:background="@drawable/sousuobg"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="14dp"
                android:layout_width="12dp"
                android:layout_height="12dp"/>

        </RelativeLayout>

    </RelativeLayout>



    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpage1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>