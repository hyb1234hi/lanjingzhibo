<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.WoDeZiLiaoActivity">


    <ImageView
        android:id="@+id/fanhui"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/fanhui_hei"
        android:layout_width="15dp"
        android:layout_height="20dp"/>


    <TextView
        app:layout_constraintTop_toTopOf="@+id/fanhui"
        app:layout_constraintBottom_toBottomOf="@+id/fanhui"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="18sp"
        android:textColor="#333333"
        android:text="我的资料"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        app:layout_constraintTop_toBottomOf="@+id/fanhui"
        android:background="#EEEEEE"
        android:id="@+id/bbb"
        android:layout_marginTop="14dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <ImageView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="28dp"
        android:id="@+id/touxiang"
        app:layout_constraintTop_toBottomOf="@+id/bbb"
        android:src="@drawable/xiaoren"
        android:layout_width="60dp"
        android:layout_height="60dp"/>

    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="18dp"
        android:id="@+id/name"
        android:textColor="#333333"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@+id/touxiang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="#AAB5CA"
        android:textSize="15sp"
        android:text="编辑昵称"
        android:id="@+id/bianjiningcheng"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/bianjiningcheng"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="62dp">

            <TextView
                android:textColor="#333333"
                android:textSize="17sp"
                android:text="性别"
                android:layout_marginStart="20sp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:background="@drawable/you"
                android:layout_width="9dp"
                android:id="@+id/gggg"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_height="14dp"/>

            <TextView
                android:id="@+id/xuanze1"
                android:textColor="#AAB5CA"
                android:textSize="16sp"
                android:text="请选择"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/gggg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <View
            android:background="#EEEEEE"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="match_parent"
            android:layout_height="62dp">

            <TextView
                android:textColor="#333333"
                android:textSize="17sp"
                android:text="年龄"
                android:layout_marginStart="20sp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:background="@drawable/you"
                android:layout_width="9dp"
                android:id="@+id/gggg2"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_height="14dp"/>

            <TextView
                android:id="@+id/xuanze2"
                android:textColor="#AAB5CA"
                android:textSize="16sp"
                android:text="请选择"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/gggg2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:background="#EEEEEE"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl3"
            android:layout_width="match_parent"
            android:layout_height="62dp">

            <TextView
                android:textColor="#333333"
                android:textSize="17sp"
                android:text="签名"
                android:layout_marginStart="20sp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:background="@drawable/you"
                android:layout_width="9dp"
                android:id="@+id/gggg3"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_height="14dp"/>

            <TextView
                android:id="@+id/xuanze3"
                android:textColor="#AAB5CA"
                android:textSize="16sp"
                android:text="请输入你的签名"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/gggg3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:background="#EEEEEE"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl4"
            android:layout_width="match_parent"
            android:layout_height="62dp">

            <TextView
                android:textColor="#333333"
                android:textSize="17sp"
                android:text="家乡"
                android:layout_marginStart="20sp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:background="@drawable/you"
                android:layout_width="9dp"
                android:id="@+id/gggg4"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_height="14dp"/>

            <TextView
                android:id="@+id/xuanze4"
                android:textColor="#AAB5CA"
                android:textSize="16sp"
                android:text="请选择"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/gggg4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:background="#EEEEEE"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </RelativeLayout>
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>